auto lo
iface lo inet loopback

auto enp2s0
iface enp2s0 inet manual

auto enp3s0
iface enp3s0 inet manual

# Create the bond0 interface
auto bond0
iface bond0 inet manual
    bond-slaves enp2s0 enp3s0
    bond-miimon 100
    bond-mode 802.3ad                # LACP mode
    bond-xmit-hash-policy layer3+4

# Bridge vmbr0 - attach bond0 for Proxmox traffic (one network only)
auto vmbr0
iface vmbr0 inet static
    address {{ ansible_host }}/24
    gateway 10.70.30.1
    bridge-ports bond0
    bridge-stp off
    bridge-fd 0

# Keep wireless interface manual (if present)
iface wlp4s0 inet manual

