# Proxmox Storage Configuration

# Local storage (if applicable)
dir: local
    path /var/lib/vz
    content iso,backup,vztmpl

# NFS Storage using /mnt/data
nfs: nfs_data
    server {{ nfs_server_ip }}
    export /mnt/data
    options vers=3
    content iso,backup,rootdir

# NFS Storage using /mnt/plex
nfs: nfs_plex
    server {{ nfs_server_ip }}
    export /mnt/plex
    options vers=3
    content iso,backup,rootdir
